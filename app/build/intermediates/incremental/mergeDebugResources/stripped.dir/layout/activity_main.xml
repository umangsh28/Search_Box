<?xml version="1.0" encoding="utf-8"?>

                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D0745"
        android:orientation="vertical" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#1D0745"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#1D0745"
                android:layout_height="match_parent">

                <AutoCompleteTextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    android:hint="Type City"
                    android:textSize="20dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#220E47"
                    android:foregroundGravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

         